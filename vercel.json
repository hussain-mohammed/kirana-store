{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://kirana-store-maoc.onrender.com/:path*"
    },
    {
      "source": "/customer",
      "destination": "/customer.html"
    },
    {
      "source": "/(index|admin)?",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,ngrok-skip-browser-warning" }
      ]
    }
  ]
}
